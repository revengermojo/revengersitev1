---
const TITLE = "RevengerMojo — Underground Hacker Collective";
const DESC  = "Cinematic terminal. Neon. Glitch. Mesh online. Join the underground.";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{TITLE}</title>
    <meta name="description" content={DESC} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <base href={import.meta.env.BASE_URL} />
    <link rel="stylesheet" href="/css/hacker.css" />
  </head>
  <body>
    <!-- background layers -->
    <canvas id="shader"></canvas>
    <canvas id="matrix"></canvas>
    <div class="scanlines"></div>
    <div class="noise"></div>
    <div class="vignette"></div>

    <!-- boot sequence -->
    <section id="boot">
      <pre id="bootlog" class="bootlog"></pre>
      <div class="press">press <span>ENTER</span> to continue</div>
    </section>

    <!-- HUD -->
    <header class="hud wrap">
      <a class="logo glitch" data-text="RevengerMojo" href="/">RevengerMojo</a>
      <nav class="nav">
	    <a href="/arsenal">/arsenal</a> 
        <a href="/mission">/mission</a>
        <a href="/about">/about</a>
        <a href="/why">/why</a>
        <a href="/join">/join</a>
        <a href="/labs">/labs</a>
        <a href="/blog">/blog</a>
        <a href="/courses">/courses</a>
      </nav>
    </header>

    <main class="wrap stage">
      <section class="left">
        <div class="terminal">
          <div class="term-head">
            <span class="dot red"></span><span class="dot yellow"></span><span class="dot green"></span>
            <span class="title">revengermojo@mesh:~</span>
          </div>
          <div id="term-feed" class="term-feed"></div>
          <div class="prompt">
            <span class="path">root@revengermojo:~$</span>
            <input id="term-input" class="term-input" autocomplete="off" spellcheck="false" />
          </div>
        </div>
        <div class="ticker" id="ticker">
          <span>[feed] scanning edge nodes… OK</span>
          <span>[feed] compiling kernels… DONE</span>
          <span>[feed] staging sandboxes… READY</span>
          <span>[feed] shipping labs… SOON</span>
        </div>
      </section>

      <section class="right">
        <a class="card c1" target="_blank" rel="noopener" href="https://chat.whatsapp.com/FWqlgRxvSWm5KWm8Px6fNc">
          <h3>JOIN THE GROUND</h3>
          <p>Elite Community of Hackers.</p>
        </a>
        <a class="card c2" href="/labs"><h3>/labs — ranges</h3><p>Practice boxes, POCs. Coming soon.</p></a>
        <a class="card c3" href="/blog"><h3>/blog — research</h3><p>Signal over noise. Exploits & defenses.</p></a>
        <a class="card c4" href="/courses"><h3>/courses — paths</h3><p>Web · Cloud · Rev · Pwn. First principles.</p></a>
      </section>
    </main>

    <footer class="wrap footer">
      <div class="socials">
        <!-- Instagram -->
        <a class="social insta" href="https://instagram.com/revengermojo" target="_blank" rel="noopener" aria-label="Instagram">
          <svg viewBox="0 0 24 24" aria-hidden="true">
            <rect x="3" y="3" width="18" height="18" rx="5" />
            <circle cx="12" cy="12" r="4" />
            <circle cx="17.5" cy="6.5" r="1.2" />
          </svg>
        </a>

        <!-- YouTube -->
        <a class="social yt" href="https://youtube.com/@revengermojo" target="_blank" rel="noopener" aria-label="YouTube">
          <svg viewBox="0 0 24 24" aria-hidden="true">
            <rect x="2" y="6" width="20" height="12" rx="3" />
            <polygon points="10,9 16,12 10,15 10,9" />
          </svg>
        </a>

        <!-- Email -->
        <a class="social mail" href="mailto:revengermojo@proton.me" aria-label="Email">
          <svg viewBox="0 0 24 24" aria-hidden="true">
            <rect x="3" y="5" width="18" height="14" rx="2" />
            <path d="M3 7l9 6 9-6" />
          </svg>
        </a>

        <!-- LinkedIn -->
        <a class="social li" href="https://linkedin.com/company/revengermojo" target="_blank" rel="noopener" aria-label="LinkedIn">
          <svg viewBox="0 0 24 24" aria-hidden="true">
            <rect x="3" y="3" width="18" height="18" rx="3" />
            <rect x="7" y="10" width="2" height="7" />
            <circle cx="8" cy="7" r="1.2" />
            <path d="M13 10h2.2a3 3 0 0 1 3 3v4h-2v-4c0-1-.6-1.6-1.6-1.6H13v5.6h-2V10h2z" />
          </svg>
        </a>

        <!-- Medium -->
        <a class="social med" href="https://medium.com/@revengermojo" target="_blank" rel="noopener" aria-label="Medium">
          <svg viewBox="0 0 24 24" aria-hidden="true">
            <rect x="3" y="3" width="18" height="18" rx="3" />
            <path d="M7 16V8l4 6 4-6v8" />
          </svg>
        </a>

        <!-- Twitter/X -->
        <a class="social tw" href="https://twitter.com/revengermojo" target="_blank" rel="noopener" aria-label="Twitter">
          <svg viewBox="0 0 24 24" aria-hidden="true">
            <rect x="3" y="3" width="18" height="18" rx="3" />
            <path d="M8 9c2.5 3 6 5 10 5-.5 2-2 3.5-4 4 2 1 4.5 1.5 7 1.5-2 1.5-4.5 2.5-7.5 2.5C8 22 4 18 4 13c0-.4 0-.8.1-1.2" />
          </svg>
        </a>
      </div>

      <div class="copy">
        © {new Date().getFullYear()} RevengerMojo · security@revengermojo.org
      </div>
    </footer>

    <script src="/js/fx-shader.js" defer></script>
    <script src="/js/fx-matrix.js" defer></script>
    <script src="/js/fx-audio.js" defer></script>
    <script src="/js/boot.js" defer></script>
    <script src="/js/terminal.js" defer></script>
    <script src="/js/cursor.js" defer></script>
  </body>
</html>
